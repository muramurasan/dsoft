<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %>
        <td><%= book.contents %>
        <td><%= link_to 'Show', [:user_pc, book] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
