<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Contents</th>
      <th>Image</th>
      <th>Order at</th>
      <th>Category</th>
      <th>Current book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.contents %></td>
        <td><%= image_tag book.image_path.to_s %></td>
        <td><%= book.order_at %></td>
        <td>
          <% book.categories.each do |category| %>
            <strong style="<%= bg(category) %>"><%= category.label %> </strong>
          <% end %>
        </td>
        <td><%= book.current ? "â—¯" : "-" %></td>
        <td><%= link_to 'Show', [:admin, book] %></td>
        <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
        <td><%= link_to 'Destroy', [:admin, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

