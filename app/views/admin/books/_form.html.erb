  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :contents %>
    <%= f.text_area :contents %>
  </div>

  <div class="field">
    <%= f.label :image_path %>
    <%= f.file_field :image_path %>
  </div>

  <div class="field">
    <%= f.label :current %>
    <%= f.check_box :current %>
  </div>

  <div class="field">
    <%= collection_check_boxes(:book, :category_ids, Category.all, :id, :label) do |category| %>
      <%= category.label(style: bg(category.object)) { category.check_box + category.text } %>
    <% end %>
  </div>

    <div class="actions">
    <%= f.submit %>
  </div>
