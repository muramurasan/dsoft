<div class="ribbon l-box-lrg pure-g pure-u-lg ">
  <div class="l-box-lrg is-center pure-u-1 pure-u-md-5-5 pure-u-lg-5-5">
    <h1 class="content-head content-head-ribbon">Current books</h1>
  </div>

  <% books.each do |book| %>
    <div class="pure-u-1 pure-u-md-1-24 pure-u-lg-1-24"></div>
    <%= render "book_image", image_path: book.image_path %>
    <%= render "book_contents", title: book.title, contents: book.contents %>
    <div class="pure-u-1 pure-u-md-1-24 pure-u-lg-1-24"></div>
  <% end %>
</div>
